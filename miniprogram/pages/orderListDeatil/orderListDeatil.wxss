/* pages/order/order.wxss */
page{
  width: 100%;
  height: auto;
  background: #efefef;
}
.containerBox{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 32rpx;
  box-sizing: border-box;
}
.address{
  width: 100%;
  height: 200rpx;
  background: #fff;
  margin:10px 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-radius: 10px;
  padding: 0 6px;
  box-sizing: border-box;
}
.aDLeft{
  display: flex;
  align-items: center;
}
.address .imgAdr{
  width: 60rpx;
  height: 60rpx;
  margin-right: 10px;
}
.address .imgJt{
  width: 50rpx;
  height: 50rpx;
}
.addInfo{
  display: flex;
  flex-direction: column;
  line-height: 62rpx;
}
.addInfo text:first-child{
  font-size: 36rpx;
}
.addInfo .detAdr{
  font-size: 30rpx;
}
.orderDetail{
  width: 100%;
  height: auto;
  background: #fff;
  border-radius: 10px !important;
  margin-top: 32rpx;
}
.vantCard{
  width: 100%;
  height: auto;
  background: #fff !important;
  border-radius: 10px !important;
}
.titClass{
  font-size: 30rpx;
  margin-bottom: 4px;
}
.descClass{
  margin-bottom: 4px;
}
