/* pages/order/order.wxss */
page{
  width: 100%;
  height: auto;
  background: #efefef;
}
.containerBox{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 32rpx;
  box-sizing: border-box;
}
.address{
  width: 100%;
  background: #fff;
  margin:10px 0;
  margin-bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: column;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  padding: 0 6px;
  box-sizing: border-box;
}
.aDLeft{
  width: 100%;
  display: flex;
  align-items: center;
  height: 190rpx;
}
.address .imgAdr{
  width: 60rpx;
  height: 60rpx;
  margin-right: 10px;
}
.address .imgJt{
  width: 50rpx;
  height: 50rpx;
}
.addInfo{
  display: flex;
  flex-direction: column;
  line-height: 62rpx;
}
.addInfo text:first-child{
  font-size: 36rpx;
}
.addInfo .detAdr{
  font-size: 30rpx;
}
.ediuBtn{
  width: 100%;
  background: #fff;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  justify-content: space-around;
  border-top: 1px solid #efefef;
}
.ediuBtn text{
  font-size: 32rpx;
  margin: 18rpx 0;
  width: 50%;
  display: flex;
  align-content: center;
  justify-content: center;
}
.newBtn{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 100rpx 0;
}
.newBtn .btn{
  width: 80%;
  height: 40rpx;
}
.van-button--normal{
  width: 100% !important;
} 