page{
  width: 100%;
  height: 100%;
  background: #efefef;
}
.containerBox{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
swiper{
  width: 100%;
  height: 530rpx;
  position: relative;
}
swiper image{
  width: 100%;
  height: 100%;
}
.yShou{
  width: 100%;
  height: 200rpx;
  background:#f40c37 ;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  line-height: 38px;
}
.yShou text:first-child{
  font-size: 50rpx;
  color: #fff;
}
.yShou text:last-child{
  font-size: 40rpx;
  color: #fff;
}
.detListBox{
  width: 100%;
}
.detListBox .detTop{
  height: 100rpx;
  height: auto;
  display: flex;
  /* align-items: center; */
  flex-direction: column;
  border-bottom: 1px solid #efefef;
  padding: 32rpx;
  box-sizing: border-box;
  background: #fff;
}
.detTop .price{
  font-size: 26rpx;
  color: #000;
  margin-top: 10px;
}

.dBox{
  width: 100%;
  display: flex;
  align-items: center;
}
 .detTop .bSend{
  width: 65rpx;
  height: 44rpx;
  border: 1px solid #f40c4e;
  color: #f40c4e;
  font-size: 12px;
  padding: 2px;
  box-sizing: border-box;
}
.detTop .tit{
  width: 228px;
  color: #000;
  font-size: 36rpx;
  padding: 2px;
  box-sizing: border-box;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin-left: 12px;
}
.detTop .wxImg{
  width: 60rpx;
  height: 60rpx;
  margin-right: 10px;
}
.detTop .pyqImg{
  width: 60rpx;
  height: 60rpx;
}
.gDetail{
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 32rpx;
  box-sizing: border-box;
  margin-bottom: 12px;
}
.gList{
  display: flex;
  align-items: center;
  flex-direction: column;
}
.gList image{
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 14px;
}
.gList text{
  font-size: 14px;
  color: #000;
}
.personDetal{
  width: 100%;
  margin-top: 12px;
  background: #fff;
}
.personDetal .nameList{
  display: flex;
  align-items: center;
  background: #fff;
  padding: 0 16px;
  height: 128rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #efefef;
}
.nameList .tX{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
}
.nameList text{
  font-size: 16px;
  margin-left: 12px;
}
.nameList .jt1{
  width: 22px;
  height: 16px;
}
.imgList{
  width: 100%;
  height: 6000px;
}
.imgList image{
  width: 100%;
  height: 100%;
}
.gwcBox{
  width: 100%;
  height: 80rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 200;
  background: #fff;
  display: flex;
  align-items: center;
}
.gwxListOne,.gwxListTwo,.gwxListThree{
  width: 20%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  height: 120rpx;
}
.gwxListOne{
  width: 20%;
  background: #fff;
}
.gwxListOne image{
  width: 50rpx;
  height: 22px;
}
.gwxListOne text{
 font-size: 12px;
 color: #000;
}
.gwxListTwo{
  width: 40%;
  background: linear-gradient(to right, #FFC500, #FF9402);
}
.gwxListTwo text{
  font-size: 32rpx;
  color: #fff;
}
.gwxListThree{
  width: 40%;
  background:linear-gradient(to right, #FF7A00, #FE560A)
}
.gwxListThree text{
  font-size: 32rpx;
  color: #fff;
}
