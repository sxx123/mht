/* pages/order/order.wxss */
page{
  width: 100%;
  height: auto;
  background: #efefef;
}
.containerBox{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 32rpx;
  box-sizing: border-box;
}
.address{
  width: 100%;
  height: 200rpx;
  background: #fff;
  margin:10px 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-radius: 10px;
  padding: 0 6px;
  box-sizing: border-box;
}
.aDLeft{
  display: flex;
  align-items: center;
}
.address .imgAdr{
  width: 100rpx;
  height: 100rpx;
  margin-right: 10px;
}
.address .imgJt{
  width: 50rpx;
  height: 50rpx;
}
.addInfo{
  display: flex;
  flex-direction: column;
  line-height: 62rpx;
}
.addInfo text:first-child{
  font-size: 36rpx;
}
.addInfo .detAdr{
  font-size: 30rpx;
}